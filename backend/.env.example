# ============================================================================
# ENVIRONMENT CONFIGURATION
# ============================================================================
# Environment mode: 'local' or 'rbc'
ENV=local

# ============================================================================
# SERVER SETTINGS
# ============================================================================
HOST=0.0.0.0
PORT=8000
DEBUG=true

# CORS origins (comma-separated)
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# ============================================================================
# DATABASE
# ============================================================================
DATABASE_URL=sqlite+aiosqlite:///./alex_assist.db

# ============================================================================
# FILE UPLOADS
# ============================================================================
UPLOAD_DIR=./uploads
MAX_UPLOAD_SIZE_MB=10

# ============================================================================
# LOCAL ENVIRONMENT - OpenAI Configuration
# ============================================================================
# Required when ENV=local
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_BASE_URL=https://api.openai.com/v1
DEFAULT_MODEL=gpt-4o-mini

# ============================================================================
# RBC ENVIRONMENT - Custom LLM Endpoint + OAuth2
# ============================================================================
# Required when ENV=rbc

# Custom LLM endpoint
# RBC_LLM_ENDPOINT=https://your-corporate-llm.com/v1

# OAuth2 configuration
# OAUTH_TOKEN_ENDPOINT=https://auth.yourcompany.com/oauth/token
# OAUTH_CLIENT_ID=your-client-id
# OAUTH_CLIENT_SECRET=your-client-secret
# OAUTH_SCOPE=api.read
# OAUTH_REFRESH_BUFFER_MINUTES=5

# Corporate proxy for web search (optional)
# PROXY_URL=proxy.yourcompany.com:8080
# PROXY_USERNAME=your-proxy-username
# PROXY_PASSWORD=your-proxy-password

# Model settings (can override per environment)
# DEFAULT_MODEL=gpt-4o

# ============================================================================
# MODEL CONFIGURATION
# ============================================================================
MAX_TOKENS=4096
TEMPERATURE=0.7
