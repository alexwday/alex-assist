# ============================================================================
# RBC ENVIRONMENT CONFIGURATION
# Copy this to .env when deploying to RBC environment
# ============================================================================

ENV=rbc

# ============================================================================
# SERVER SETTINGS
# ============================================================================
HOST=0.0.0.0
PORT=8000
DEBUG=false

# CORS origins - update with your frontend URL
CORS_ORIGINS=http://localhost:5173

# ============================================================================
# DATABASE
# ============================================================================
DATABASE_URL=sqlite+aiosqlite:///./alex_assist.db

# ============================================================================
# FILE UPLOADS
# ============================================================================
UPLOAD_DIR=./uploads
MAX_UPLOAD_SIZE_MB=50

# ============================================================================
# RBC LLM ENDPOINT
# ============================================================================
RBC_LLM_ENDPOINT=https://your-corporate-llm.com/v1
DEFAULT_MODEL=gpt-4o

# ============================================================================
# OAUTH2 AUTHENTICATION
# ============================================================================
OAUTH_TOKEN_ENDPOINT=https://auth.yourcompany.com/oauth/token
OAUTH_CLIENT_ID=your-client-id
OAUTH_CLIENT_SECRET=your-client-secret
OAUTH_SCOPE=api.read
OAUTH_REFRESH_BUFFER_MINUTES=5

# ============================================================================
# CORPORATE PROXY (for web search)
# ============================================================================
PROXY_URL=proxy.yourcompany.com:8080
PROXY_USERNAME=your-proxy-username
PROXY_PASSWORD=your-proxy-password

# ============================================================================
# MODEL CONFIGURATION
# ============================================================================
MAX_TOKENS=4096
TEMPERATURE=0.7
